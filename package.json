{
  "name": "node-challenge-001",
  "version": "1.0.0",
  "description": "Node challenge 001",
  "repository": "https://github.com/JungleDevs/node-challenge-001",
  "author": "Vinicius de Morais Justo",
  "license": "MIT",
  "private": false,
  "engineStrict": true,
  "engines": {
    "node": "12"
  },
  "scripts": {
    "migrate": "npx knex migrate:latest --knexfile ./db/knexfile.js",
    "seed": "npx knex seed:run --knexfile ./db/knexfile.js",
    "down": "npx knex migrate:down --knexfile ./db/knexfile.js",
    "dev": "cross-env NODE_ENV=development nodemon --watch src --exec babel-node src/index.js",
    "lint": "eslint --no-inline-config --no-error-on-unmatched-pattern -c .eslintrc.json .",
    "start": "pm2-runtime start ecosystem.config.yml --env prod"
  },
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@babel/node": "^7.12.6",
    "cross-env": "^7.0.3",
    "eslint": "^7.32.0",
    "eslint-config-trybe-backend": "^1.0.4",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-mocha": "^9.0.0",
    "eslint-plugin-sonarjs": "^0.10.0",
    "nodemon": "^2.0.6"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "crypto-js": "^4.1.1",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-rescue": "^1.1.31",
    "joi": "^17.4.2",
    "jsonwebtoken": "^8.5.1",
    "knex": "^0.21.12",
    "multer": "^1.4.3",
    "objection": "^2.2.3",
    "pg": "^8.5.1",
    "pm2": "^5.1.1"
  }
}
